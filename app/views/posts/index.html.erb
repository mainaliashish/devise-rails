<h1>Posts</h1>
<% if user_signed_in? %>
  <%= button_to "Logout", destroy_user_session_path, method: :delete %>
  <%= link_to "New post", new_post_path %>
<% else %>
  <%= link_to "Login", new_user_session_path, class: "login-button" %>
<% end %>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

